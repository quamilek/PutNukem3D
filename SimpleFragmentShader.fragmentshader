#version 330 core
in vec2 UV;
in vec4 world_position;

float scale = 8;

// Ouput data
out vec3 color;

uniform sampler2D myTextureSampler;

void main()
{

	// Output color = color of the texture at the specified UV
	//color = texture2D( myTextureSampler, UV ).rgb;

	color.r = world_position.z/scale;
	color.g = world_position.z/scale;
	color.b = world_position.z/scale;


}
